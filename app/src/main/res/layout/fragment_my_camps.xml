<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MyCampsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="366dp"
        android:layout_height="139dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/astara"
                android:layout_width="219dp"
                android:layout_height="142dp"
                android:background="@drawable/astara"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Astara Camp"
                android:textStyle="bold"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/astara"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/currency"
                android:layout_width="129dp"
                android:layout_height="23dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="76dp"
                android:text="55 AZN per-adult"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/astara" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="7-8 May"
                app:layout_constraintStart_toEndOf="@id/astara"
                app:layout_constraintTop_toBottomOf="@id/currency" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="228dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/star_rating_icon"
                app:layout_constraintStart_toStartOf="@+id/astara"
                app:layout_constraintTop_toBottomOf="@id/date" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/star_rating_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="@id/star1"
                app:layout_constraintTop_toBottomOf="@id/currency" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/star_rating_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="@id/star2"
                app:layout_constraintTop_toBottomOf="@id/currency" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="370dp"
        android:layout_height="146dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/lerik"
                android:layout_width="222dp"
                android:layout_height="149dp"
                android:background="@drawable/lerik"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Lerik Camp"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/lerik"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/currency2"
                android:layout_width="129dp"
                android:layout_height="23dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="76dp"
                android:text="55 AZN per-adult"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lerik" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="7-8 May"
                app:layout_constraintStart_toEndOf="@id/lerik"
                app:layout_constraintTop_toBottomOf="@id/currency2" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="232dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/star_rating_icon"
                app:layout_constraintStart_toStartOf="@+id/lerik"
                app:layout_constraintTop_toBottomOf="@id/date2" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/star_rating_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.277"
                app:layout_constraintStart_toStartOf="@id/star5"
                app:layout_constraintTop_toBottomOf="@id/currency2" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>